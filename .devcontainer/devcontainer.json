// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
	"postCreateCommand": "echo 'sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y && sudo apt -y install pre-commit tesseract-ocr-ces libenchant-2-2 && pip install pdm && pdm venv create --force && eval $(pdm venv activate in-project) && pdm install' | bash",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"DavidAnson.vscode-markdownlint",
				"eamodio.gitlens",
				"GitLab.gitlab-workflow",
				"redhat.vscode-yaml",
				"ms-python.pylint",
				"tamasfe.even-better-toml",
				"elagil.pre-commit-helper"
			]
		}
	}
}
